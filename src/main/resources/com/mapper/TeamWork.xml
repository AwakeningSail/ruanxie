<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapper.TeamworkMapper">

    <resultMap id="teamworkResultMap" type="com.Data.Teamwork">
        <id property="teamID" column="TeamID"/>
        <id property="teamworkid" column="TeamworkID"/>
        <result property="workArrangement" column="WorkArrangement"/>
        <result property="meetingMinutes" column="MeetingMinutes"/>
        <result property="assignmentResults" column="Assignmentresults"/>
        <result property="score" column="Score"/>
    </resultMap>

    <select id="getTeamworkById" resultMap="teamworkResultMap" parameterType="int">
        SELECT * FROM Teamwork WHERE TeamID = #{teamId}
    </select>

    <insert id="addTeamwork" parameterType="com.Data.Teamwork">
        INSERT INTO Teamwork (TeamID, TeamworkID, WorkArrangement, MeetingMinutes, Assignmentresults, Score)
        VALUES (#{teamID}, #{teamworkid}, #{workArrangement}, #{meetingMinutes}, #{assignmentResults}, #{score})
    </insert>

    <update id="updateTeamwork" parameterType="com.Data.Teamwork">
        UPDATE Teamwork
        SET WorkArrangement = #{workArrangement}, MeetingMinutes = #{meetingMinutes},
            Assignmentresults = #{assignmentResults}, Score = #{score}
        WHERE TeamID = #{teamID} AND TeamworkID = #{teamworkid}
    </update>

    <delete id="deleteTeamwork" parameterType="int">
        DELETE FROM Teamwork WHERE TeamID = #{teamId} AND TeamworkID = #{teamworkId}
    </delete>

    <select id="getAllTeamworks" resultMap="teamworkResultMap">
        SELECT * FROM Teamwork
    </select>

    <select id="getTeamworkByTeamworkID" resultMap="teamworkResultMap" parameterType="int">
        SELECT * FROM Teamwork WHERE TeamworkID = #{TeamworkID}
    </select>

</mapper>
